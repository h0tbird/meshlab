{
	"name": "meshlab",
	"build": {
		"dockerfile": "Dockerfile",
		"options": [
			"--tag", "ghcr.io/h0tbird/meshlab/devcontainer:latest"
		]
	},
	"mounts": [
		"type=bind,source=/run/host-services/ssh-auth.sock,target=/ssh-agent",
		"type=bind,source=${localEnv:HOME}/.kube/config,target=/root/.kube/config",
		"type=bind,source=${localWorkspaceFolder}/../istio,target=/workspaces/istio"
	],
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		}
	},
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	"containerEnv": {
		"GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
		"GITHUB_USER": "${localEnv:GITHUB_USER}"
	},
	"remoteUser": "root",
	"runArgs": [
		"--name", "meshlab",
		"--network", "host",
		"--pid", "host",
		"--privileged"
	],
	"forwardPorts": [8080, 8081, 8082, 8083, 8084, 8085],
	"portsAttributes": {
		"8080": {
			"label": "argocd",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"8081": {
			"label": "argowf",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"8082": {
			"label": "vault",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"8083": {
			"label": "prometheus",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"8084": {
			"label": "grafana",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"8085": {
			"label": "kiali",
			"onAutoForward": "notify",
			"protocol": "http"
		}
	},
	"otherPortsAttributes": {
		"onAutoForward" : "ignore"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"remote.autoForwardPorts":false
			}
		}
	},
	"hostRequirements": {
		"cpus": 8,
		"memory": "16gb"
	},
	"initializeCommand": {
		"create-istio-dir": "mkdir -p ${localWorkspaceFolder}/../istio"
	},
	"postCreateCommand": {
		"clone-istio": "test -d /workspaces/istio/.git || { gh repo clone h0tbird/forked-istio /workspaces/istio && cd /workspaces/istio && git remote add upstream https://github.com/istio/istio.git; }"
	}
}
