# Dockerfile for Tilt live-update of pilot-discovery
# Uses pre-built binary from out/linux_${TARGETARCH}/pilot-discovery

ARG TAG

FROM ghcr.io/h0tbird/pilot:${TAG}-debug

ARG ARCH

# Copy the pre-built pilot-discovery binary
COPY out/linux_${ARCH}/pilot-discovery /usr/local/bin/pilot-discovery

USER 1337:1337
